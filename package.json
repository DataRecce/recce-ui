{
  "name": "@datarecce/ui",
  "version": "0.1.0",
  "description": "Recce UI Components Library - Reusable React components for data validation and review",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./lineage": {
      "types": "./dist/lineage.d.ts",
      "import": "./dist/lineage.mjs",
      "require": "./dist/lineage.js"
    },
    "./charts": {
      "types": "./dist/charts.d.ts",
      "import": "./dist/charts.mjs",
      "require": "./dist/charts.js"
    },
    "./query": {
      "types": "./dist/query.d.ts",
      "import": "./dist/query.mjs",
      "require": "./dist/query.js"
    },
    "./profile": {
      "types": "./dist/profile.d.ts",
      "import": "./dist/profile.mjs",
      "require": "./dist/profile.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.mjs",
      "require": "./dist/types.js"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type:check": "tsc --noEmit",
    "type:check:strict": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "test": "vitest",
    "test:watch": "vitest watch",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "prepublishOnly": "npm run build",
    "submodule:update": "git submodule update --remote --merge"
  },
  "keywords": [
    "react",
    "components",
    "recce",
    "dbt",
    "data-validation",
    "ui-library",
    "typescript"
  ],
  "author": "Recce Dev Team <dev@reccehq.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DataRecce/recce-ui.git"
  },
  "peerDependencies": {
    "@chakra-ui/react": "^3.0.0",
    "@emotion/react": "^11.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@xyflow/react": "^12.0.0",
    "axios": "^1.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@amplitude/analytics-core": "^2.33.0",
    "@amplitude/unified": "1.0.0-beta.9",
    "@chakra-ui/styled-system": "^2.12.0",
    "@dagrejs/dagre": "^1.1.8",
    "@hello-pangea/dnd": "^18.0.1",
    "@jeromefitz/date-fns-tz": "3.0.0-canary.8",
    "@monaco-editor/react": "^4.7.0",
    "@sentry/react": "^10.29.0",
    "chakra-react-select": "^6.1.1",
    "chart.js": "^4.5.1",
    "common-tags": "^1.8.2",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "html-to-image": "^1.11.13",
    "html2canvas-pro": "^1.5.13",
    "js-cookie": "^3.0.5",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.55.1",
    "next-themes": "^0.4.6",
    "react-chartjs-2": "^5.3.1",
    "react-data-grid": "7.0.0-beta.59",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-split": "^2.0.14",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "simplebar": "^6.3.3",
    "simplebar-react": "3.3.2",
    "usehooks-ts": "^3.1.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.4",
    "@types/dagre": "^0.7.53",
    "@types/file-saver": "^2.0.7",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.2",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "next": "^16.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "engines": {
    "node": ">=20"
  }
}
